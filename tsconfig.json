{
    "compilerOptions": {
        "outDir": "./public/js",
        "sourceMap": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true
    },
    "include": [
        "resources/tsx/**/*"
    ]
}
